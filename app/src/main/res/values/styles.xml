<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/pink</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ReserveButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/indigo</item>
        <item name="colorButtonNormal">@color/pink</item>
    </style>

    <style name="MRadioButton.Purple" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/color_loginframent_sub</item>
        <item name="colorControlHighlight">@color/color_loginframent_sub</item>
        <item name="android:colorPressedHighlight">@color/color_loginframent_sub</item>
        <item name="colorPrimaryDark">@color/color_loginframent_sub</item>
        <item name="colorPrimary">@color/color_loginframent_sub</item>
        <item name="colorControlActivated">@color/color_loginframent_sub</item>
    </style>

    <style name="styleRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>

    </style>


</resources>
