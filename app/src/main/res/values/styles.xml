<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ReserveButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/color_homeal_background</item>
        <item name="colorButtonNormal">@color/color_homeal_background</item>
    </style>

    <style name="MRadioButton.Purple" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/color_loginframent_sub</item>
        <item name="colorControlHighlight">@color/color_loginframent_sub</item>
        <item name="android:colorPressedHighlight">@color/color_loginframent_sub</item>
        <item name="colorPrimaryDark">@color/color_loginframent_sub</item>
        <item name="colorPrimary">@color/color_loginframent_sub</item>
        <item name="colorControlActivated">@color/color_loginframent_sub</item>
    </style>

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_ratingbar_full</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="bigstartRaingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_bigratingbar_full</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="reseveRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_reseve_ratingbar</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="settingRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/setting_custom_ratingbar</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
        <item name="android:thumb">@null</item>
    </style>

</resources>
