<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CkPersonalDataActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_ck_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_ck_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/btn_personal_change"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/appbar_ck_main"
        android:layout_alignRight="@+id/appbar_ck_main"
        android:layout_below="@+id/appbar_ck_main"
        android:text="@string/change" />

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btn_personal_change"
        android:layout_marginLeft="@dimen/et_personal_marginleft"
        android:text="Profile"
        android:textSize="25dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_ck_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/appbar_ck_main"
        android:layout_alignStart="@+id/appbar_ck_main"
        android:layout_below="@+id/text_profile"
        android:layout_marginLeft="@dimen/ck_personaldata_left"
        android:layout_marginTop="@dimen/ck_personaldata_left"
        android:src="@drawable/base_person_icon" />

    <LinearLayout
        android:id="@+id/linear_ck_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_ck_picture"
        android:layout_below="@+id/text_profile"
        android:layout_toRightOf="@+id/image_ck_picture">

        <EditText
            android:id="@+id/edit_ck_name_last"
            android:layout_width="84dp"
            android:layout_height="42dp"
            android:layout_above="@+id/textView6"
            android:layout_alignTop="@+id/edit_ck_name_first"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/image_ck_picture"
            android:background="@drawable/edge"
            android:hint=" Name" />

        <EditText
            android:id="@+id/edit_ck_name_first"
            android:layout_width="84dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/edit_ck_name_last"
            android:layout_marginLeft="11dp"
            android:background="@drawable/edge"
            android:hint=" Name" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linear_ck_name"
        android:layout_alignStart="@+id/linear_ck_name"
        android:layout_below="@+id/linear_ck_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:text="Birthday"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/linear_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/text_ck_birth"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/edge"
            android:text="BirthDay"
            android:gravity="center_vertical" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/linear_birth"
        android:layout_alignStart="@id/linear_birth"
        android:layout_below="@+id/linear_birth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_ck_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radio_ck_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:text="Female" />
    </RadioGroup>


    <LinearLayout
        android:id="@+id/linear_phone_country"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linear_phone"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="0.5"
            android:background="@drawable/edge"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_ck_phone"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@null"
                android:ems="10"
                android:text=" Phone"
                android:layout_alignTop="@+id/spinner_ck_country"
                android:inputType="phone" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_ck_country"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/edit_ck_phone"
            android:layout_weight="0.5"
            android:background="@drawable/edge" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_ck_address"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear_phone_country"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/edge"
        android:gravity="center_vertical"
        android:text=" Address" />

    <EditText
        android:id="@+id/edit_ck_introduce"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignLeft="@+id/text_ck_address"
        android:layout_alignStart="@+id/text_ck_address"
        android:layout_below="@+id/text_ck_address"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/edge"
        android:hint=" Introduce" />

    <Button
        android:id="@+id/btn_ck_changefinish"
        android:layout_width="324dp"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_ck_introduce"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        android:text="@string/change_finish" />

</RelativeLayout>
