<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sm.ej.nk.homeal.fragment.EtMyPageFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linear_eater_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_et_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/basic_person" />

        <LinearLayout
            android:id="@+id/linear_eater"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_et_picture">

            <TextView
                android:id="@+id/text_et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:layout_weight="0.5"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text_et_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:layout_weight="0.5"
                android:layout_below="@+id/text_et_name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_et_mapage_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/linear_eater_header"
        android:layout_marginLeft="@dimen/setting_box_margin_left"
        android:layout_marginRight="@dimen/setting_box_margin_left"
        android:layout_marginTop="16dp"
        android:background="@drawable/edge">

        <TextView
            android:id="@+id/text_et_mypage_personal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/setting_box_text_margin"
            android:gravity="center_vertical"
            android:text="Profile"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_et_mapage_middle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/linear_et_mapage_top"
        android:layout_marginLeft="@dimen/setting_box_margin_left"
        android:layout_marginRight="@dimen/setting_box_margin_left"
        android:layout_marginTop="24dp"
        android:background="@drawable/edge">

        <TextView
            android:id="@+id/text_et_mypage_zzim"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/setting_box_text_margin"
            android:gravity="center_vertical"
            android:text="Bookmark"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_et_mapage_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/linear_et_mapage_middle"
        android:layout_marginLeft="@dimen/setting_box_margin_left"
        android:layout_marginRight="@dimen/setting_box_margin_left"
        android:layout_marginTop="24dp"
        android:background="@drawable/edge">

        <TextView
            android:id="@+id/text_et_mypage_setting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/setting_box_text_margin"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>
