<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SignUpFragment">

    <ImageView
        android:id="@+id/image_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/color_homeal_background"
        android:src="@drawable/singup_logo_xxhdpi" />

    <LinearLayout
        android:id="@+id/linear_sign_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linearLayout_brithday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edge"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_signup_birth"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="BirthDay"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_sinup_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:buttonTint="@color/color_loginframent_sub"
                android:checked="true"
                android:textColor="@color/white"
                android:text="Male"
                android:textSize="10dp" />

            <RadioButton
                android:id="@+id/radio_sinup_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/color_loginframent_sub"
                android:text="Female"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_signup_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linear_sign_birth"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <EditText
            android:id="@+id/edit_signup_phone"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="0.5"
            android:background="@drawable/edge"
            android:ems="10"
            android:hint=" Phone"
            android:inputType="phone"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/text_signup_country"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/edge"
            android:text=" Country"
            android:gravity="center_vertical"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduce"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="11dp" />

        <EditText
            android:id="@+id/edit_signup_intro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edge"
            android:hint=" Introduce"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/sf_ok"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/linear_signup_phone"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/tos_btn"
        android:text="@string/OK" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/text_sing_up"
        android:textSize="20dp"
        android:layout_below="@+id/image_sign_up"
        android:layout_alignLeft="@+id/linear_sign_birth"
        android:layout_alignStart="@+id/linear_sign_birth"
        android:textColor="@color/white"/>


</RelativeLayout>

