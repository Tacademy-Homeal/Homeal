<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SignUpFragment">

    <ImageView
        android:id="@+id/image_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/color_homeal_background"
        android:src="@drawable/singup_logo_xxhdpi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_sign_up"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="@string/text_sing_up"
        android:textSize="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_sign_up_person"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:background="@drawable/basic_person" />

    <LinearLayout
        android:id="@+id/linear_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignTop="@+id/image_sign_up_person"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/image_sign_up_person">

        <EditText
            android:id="@+id/edit_frist_name"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/edittext_bg"
            android:hint=" Name"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="11dp"
        android:id="@+id/linearLayout_brithday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_signup_name"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/image_sign_up_person"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_signup_birth"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:text=" BirthDay" />
    </LinearLayout>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_alignLeft="@+id/linearLayout_brithday"
        android:layout_below="@+id/linearLayout_brithday">

        <RadioButton
            android:id="@+id/radio_sinup_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:buttonTint="@color/color_loginframent_sub"
            android:checked="true"
            android:text="Male"
            android:textColor="@color/color_loginframent_sub"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/radio_sinup_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_loginframent_sub"
            android:text="Female"
            android:textColor="@color/color_loginframent_sub"
            android:textSize="10dp" />
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:weightSum="1"
        android:id="@+id/linear_signup_phone"
        android:layout_marginLeft="16dp">

        <EditText
            android:id="@+id/edit_signup_phone"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint=" Phone"
            android:inputType="phone" />

        <TextView
            android:id="@+id/text_signup_country"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="11dp"
            android:text=" Country"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/white" />
    </LinearLayout>

    <EditText
        android:layout_below="@+id/linear_signup_phone"
        android:id="@+id/edit_signup_intro"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint=" Introduce"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="11dp"
        android:background="@drawable/edittext_bg"
        android:gravity="left|top"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/sf_ok"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_signup_intro"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:text="@string/OK" />

</RelativeLayout>

