<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_homeal_background"
    tools:context="com.sm.ej.nk.homeal.fragment.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_login_select"
            android:layout_above="@+id/radio_group_login"
            android:layout_centerHorizontal="true"
            android:text="Guest Host를 선택해주세요"
            android:textSize="@dimen/size_homeal_login_second"
            android:textColor="@color/color_loginframent_sub"/>

        <RadioGroup
            android:id="@+id/radio_group_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_login_facebook"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="62dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobtn_login_ft_eater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Eater"
                android:textColor="@color/color_loginframent_sub"
                android:buttonTint="@color/color_loginframent_sub"/>

            <RadioButton
                android:id="@+id/radiobtn_login_ft_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/radio_group_login"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="@+id/btn_login_facebook"
                android:checked="false"
                android:text="Cooker"
                android:textColor="@color/color_loginframent_sub"
                android:buttonTint="@color/color_loginframent_sub"/>

        </RadioGroup>


        <ZoomControls
            android:id="@+id/zoomControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="847dp"
            android:layout_marginStart="847dp" />

        <ImageButton
            android:id="@+id/btn_login_facebook"
            android:src="@drawable/facebook_icon"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="83dp"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="F"
            android:textColor="@color/color_homeal_background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/hoemal_icon"
            android:layout_above="@+id/textview_login_select"
            android:layout_alignRight="@+id/radio_group_login"
            android:layout_alignEnd="@+id/radio_group_login" />


    </RelativeLayout>

</FrameLayout>
