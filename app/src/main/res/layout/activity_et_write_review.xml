<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sm.ej.nk.homeal.EtWriteReviewActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_et_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_et_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/appbar_et_main"
    android:orientation="horizontal"
    android:id="@+id/linear_taste"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Taste"
        />

    <RatingBar
        style="@style/bigstartRaingBar"
        android:layout_marginLeft="15dp"
        android:rating="3.5"
        android:stepSize="0.5"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/rating_taste"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_taste"
        android:orientation="horizontal"
        android:id="@+id/linear_price"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Price"
          />

        <RatingBar
            style="@style/bigstartRaingBar"
            android:layout_marginLeft="15dp"
            android:rating="3.5"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_price"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_price"
        android:orientation="horizontal"
        android:id="@+id/linear_clean"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Clean"
        />

        <RatingBar
            style="@style/bigstartRaingBar"
            android:id="@+id/rating_clean"
            android:layout_marginLeft="15dp"
            android:rating="3.5"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_clean"
        android:orientation="horizontal"
        android:id="@+id/linear_kindness"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kindness"
         />

        <RatingBar
            style="@style/bigstartRaingBar"
            android:rating="3.5"
            android:layout_marginLeft="15dp"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_kindness"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/linear_kindness"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/edit_after_write"
            android:background="@drawable/write_edittext_bg"
            android:gravity="left|top"
            android:hint="postscript"/>

    </LinearLayout>
    <Button
        android:theme="@style/ReserveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_et_review_finish"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/review_finish"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/checkBox"
        android:layout_below="@+id/linear_clean"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="603dp"
        android:layout_marginStart="603dp" />

</RelativeLayout>
