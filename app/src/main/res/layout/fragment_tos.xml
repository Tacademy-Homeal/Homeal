<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sm.ej.nk.homeal.fragment.TOSFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용 약관"
        android:textSize="24dp"
        android:textColor="@color/color_homeal_main"
        android:id="@+id/text_tos_main"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/scrollView"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" />

        <ScrollView
            android:layout_width="282dp"
            android:layout_height="321dp"
            android:id="@+id/scrollView"
            android:layout_gravity="left|center_vertical"
            android:layout_above="@+id/btn_tos_ok"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tos_info"
                android:id="@+id/textView13"
                android:layout_gravity="left|top"
                android:layout_above="@+id/scrollView" />

        </ScrollView>

    <ImageButton
        android:src="@drawable/agree_btn"
        android:background="@color/color_homeal_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_homeal_main"
        android:text="동의"
        android:id="@+id/btn_tos_ok"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView" />

    <ImageButton

        android:src="@drawable/notagree_btn"
        android:background="@color/color_homeal_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_homeal_main"
        android:text="비동의"
        android:id="@+id/btn_tos_backey"
        android:layout_below="@+id/scrollView"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" />




    </RelativeLayout>
</FrameLayout>
